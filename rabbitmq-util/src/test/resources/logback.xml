<configuration>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%level] [%thread] %logger{36} %mdc{all:-}%msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="TRACE">
        <appender-ref ref="STDOUT" />
    </root>
    
</configuration>
